<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:viewModels="clr-namespace:KG.Mobile.ViewModels._00_Login"
    x:Class="KG.Mobile.Views._00_Login.LoginPage">

    <ContentPage.BindingContext>
        <viewModels:LoginViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Spacing="0">

            <ContentView VerticalOptions="Fill">
                <Image
                    Source="SBMOM_Logo.png"
                    VerticalOptions="Center"
                    Margin="70,0,70,10" />
            </ContentView>

            <Label
                Text="SBMOM"
                StyleClass="mainPageTitle" />

            <Label Text="WebAPI" />
            <Entry
                Text="{Binding WebApiUrl}"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False" />

            <Label Text="Username" />
            <Entry
                Text="{Binding Username}"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False" />

            <Label Text="Password" />
            <Entry
                Text="{Binding Password}"
                IsSpellCheckEnabled="False"
                IsTextPredictionEnabled="False"
                IsPassword="True" />

            <Button
                Command="{Binding LoginCommand}"
                Text="Login"
                Background="DarkGray" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
