<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KG.Mobile.Views.AboutPage"
             xmlns:vm="clr-namespace:KG.Mobile.ViewModels"
             Title="{Binding Title}">
    
    <ContentPage.BindingContext>
        <vm:AboutViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <StackLayout Orientation="Vertical" 
                     Spacing="0">

            <ContentView VerticalOptions="FillAndExpand">
                <Image Source="SBMOM_Logo.png" 
                       Margin="70,0,70,10"/>
            </ContentView>

            <Label Text="SBMOM"
                   StyleClass="mainPageTitle"/>

            <Label Text="{Binding Version}" FontAttributes="Bold"/>
            <Label Text="{Binding BuildNumber}" FontAttributes="Bold"/>

            <Label Text="This app is written in C# and native APIs using the Xamarin Platform."/>
            <Label Text="It shares code with its iOS, Android, and Windows versions."/>    
            
        </StackLayout>
    </ScrollView>
</ContentPage>